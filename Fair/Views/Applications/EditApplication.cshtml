@model Application

@{
  ViewData["Title"] = "Edit Application";
  var search = ViewBag.Search;
}

<nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Searches" asp-action="List">Searches</a></li>
    <li class="breadcrumb-item"><a asp-controller="Searches" asp-action="View" asp-route-id="@search.Id">@search.Name</a></li>
    <li class="breadcrumb-item"><a href="../List">Applications</a></li>
    <li class="breadcrumb-item active">@Model.Name</li>
  </ol>
</nav>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="#">Basic Information</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="../EditApplicationDocuments/@Model.Id">Documents</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="../EditApplicationReferences/@Model.Id">References</a>
  </li>
</ul>

<form method="post" class="mt-2">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="FirstName">First Name</label>
      <input asp-for="FirstName" class="form-control" required>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="LastName">Last Name</label>
      <input asp-for="LastName" class="form-control" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Email"></label>
      <input asp-for="Email" class="form-control" required>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Phone"></label>
      <input asp-for="Phone" class="form-control">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="CurrentPosition">Current Position</label>
      <input asp-for="CurrentPosition" class="form-control" required>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="CurrentEmployer">Current Employer</label>
      <input asp-for="CurrentEmployer" class="form-control" required>
    </div>
  </div>
  @for (int i = 0; i < Model.Degrees.Count; ++i)
  {
    <div class="form-row">
      <div class="form-group col-md-6">
        <label asp-for="Degrees[i].Degree"></label>
        <input asp-for="Degrees[i].Degree" class="form-control" required>
      </div>
      <div class="form-group col-md-6">
        <label asp-for="Degrees[i].Major"></label>
        <input asp-for="Degrees[i].Major" class="form-control" required>
      </div>
      <div class="form-group col-md-6">
        <label asp-for="Degrees[i].Institution"></label>
        <input asp-for="Degrees[i].Institution" class="form-control" required>
      </div>
      <div class="form-group col-md-6">
        <label asp-for="Degrees[i].Year"></label>
        <input asp-for="Degrees[i].Year" class="form-control" required>
      </div>
    </div>
    <div class="form-group">
      <div class="form-check">
        <input asp-for="Degrees[i].IsExpected" class="form-check-input" type="checkbox">
        <label asp-for="Degrees[i].IsExpected" class="form-check-label">Expected</label>
      </div>
    </div>
  }
  <div class="form-row mt-2">
    <a href="../List" class="btn btn-secondary">Cancel</a>
    <button class="btn btn-primary ml-2">Next</button>
  </div>
</form>