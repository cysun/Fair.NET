@model Revision

@{
    ViewData["Title"] = "Edit Revision";
    var search = ViewBag.Search;
    var document = ViewBag.Document;
}

<nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Searches" asp-action="List">Searches</a></li>
    <li class="breadcrumb-item"><a asp-controller="Searches" asp-action="View" asp-route-id="@search.Id">@search.Name</a></li>
    <li class="breadcrumb-item"><a href="../../../../Documents/List">Documents</a></li>
    <li class="breadcrumb-item"><a href="../../../View/@document.Id">@document.Name</a></li>
    <li class="breadcrumb-item active">Edit Revision @Model.Number</li>
  </ol>
</nav>

<form method="post">
  <div class="form-group">
    <label for="summernote">Notes</label>
    <textarea id="summernote" name="notes" class="form-control">@Html.Raw(Model.Notes)</textarea>
  </div>
  <div class="form-row mt-2">
    <a href="../../../View/@document.Id" class="btn btn-secondary">Cancel</a>
    <button class="btn btn-primary ml-2">Save</button>
  </div>
</form>

@section StyleSheets{
  <link href="~/lib/summernote/summernote-bs4.css" rel="stylesheet">
}

@section Scripts{
  <script src="~/lib/summernote/summernote-bs4.min.js"></script>
  <script>
    $(function () {
      $("#summernote").summernote({
        height: 200
      });
    });
  </script>
}