@model User

@{
  ViewData["Title"] = "Add";
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="List">Users</a></li>
    <li class="breadcrumb-item active" aria-current="page">Add User</li>
  </ol>
</nav>

<form method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="FirstName">First Name</label>
      <input asp-for="FirstName" class="form-control" required />
    </div>
    <div class="form-group col-md-6">
      <label asp-for="LastName">Last Name</label>
      <input asp-for="LastName" class="form-control" required />
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="Username">Username</label>
      <input asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Email">Email</label>
      <input asp-for="Email" class="form-control" required />
    </div>
  </div>
  <div class="form-group">
    <div class="form-check form-check-inline">
      <input asp-for="IsAdmin" class="form-check-input" type="checkbox">
      <label asp-for="IsAdmin" class="form-check-label">Admin</label>
    </div>
    <div class="form-check form-check-inline">
      <input asp-for="IsSysAdmin" class="form-check-input" type="checkbox">
      <label asp-for="IsSysAdmin" class="form-check-label">System Admin</label>
    </div>
  </div>
  <a asp-action="List" class="btn btn-secondary">Cancel</a>
  <button class="btn btn-primary ml-2" type="submit" name="add">Add</button>
</form>
